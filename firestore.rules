
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que qualquer usuário autenticado crie uma página.
    // Permite que qualquer pessoa (mesmo não autenticada) leia os dados de uma página.
    match /pages/{pageId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.userId;
    }

    // Permite que usuários autenticados leiam e escrevam em seus próprios documentos de usuário.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
