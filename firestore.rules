rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /pages/{pageId} {
      // Public pages can be read by anyone.
      // The owner can always read their own page, regardless of status.
      allow read: if resource.data.status == 'paid' || (request.auth != null && request.auth.uid == resource.data.userId);

      // Only the authenticated owner can create or update their page.
      allow create, update: if request.auth != null && request.auth.uid == request.resource.data.userId;
      
      // Deletion is disallowed for safety.
      allow delete: if false;
    }
  }
}