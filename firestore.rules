rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Coleção 'users': Permite que um usuário crie, leia, atualize e delete
    // seu próprio perfil, mas não o de outros.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Coleção 'pages':
    // - read: Qualquer pessoa pode ler uma página.
    // - create: Um usuário autenticado só pode criar uma página para si mesmo.
    // - update/delete: Apenas o dono da página (userId) pode atualizá-la ou deletá-la.
    match /pages/{pageId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}
